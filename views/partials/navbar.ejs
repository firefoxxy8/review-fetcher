<!-- views/partials/navbar.ejs -->
<style type="text/css">
.dropdown-content {
    display: none;
    position: absolute;
    background-color: #f9f9f9;
    min-width: 160px;
    box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
    z-index: 1;
}

.dropdown-content a {
    color: black;
    padding: 12px 16px;
    text-decoration: none;
    display: block;
}

.dropdown-content a:hover {background-color: #f1f1f1}

</style>

<nav class="navbar navbar-toggleable-md navbar-inverse bg-inverse">
  <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
  <span class="navbar-toggler-icon"></span>
</button>
  <% if(appName === 'uGrow'){ %>
    <a class="navbar-brand" href="/<%= appName.toLowerCase() %>">
      <img src="/ugrow/logo.png" width="30" height="30" alt="">
    </a>
  <% } %>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item">
        <% if(platform === 'Android'){ %>
          <a class="nav-link active" href="/<%= appName.toLowerCase() %>/android">Android</a>
        <% } else { %>
          <a class="nav-link" href="/<%= appName.toLowerCase() %>/android">Android</a>
        <% } %>
      </li>
      <li class="nav-item">
        <% if(platform === 'iOS'){ %>
          <a class="nav-link active" href="/<%= appName.toLowerCase() %>/ios">iOS</a>
        <% } else { %>
          <a class="nav-link" href="/<%= appName.toLowerCase() %>/ios">iOS</a>
        <% } %>
      </li>
      <li class="nav-item">
        <% if(platform === 'Graph'){ %>
          <a class="nav-link active" href="/<%= appName.toLowerCase() %>/graph">Graph</a>
        <% } else { %>
          <a class="nav-link" href="/<%= appName.toLowerCase() %>/graph">Graph</a>
        <% } %>
      </li>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="">Export
        <span class="caret"></span></a>
        <ul class="dropdown-content dropdown-menu">
          <li><a href="/<%= appName.toLowerCase() %>/csv"><big>csv</big></a></li>
          <li><a href="/<%= appName.toLowerCase() %>/json"><big>json</big></a></li>
          <li><a href="/<%= appName.toLowerCase() %>/xml"><big>xml</big></a></li>
        </ul>
      </li>
    </ul>
  </div>
</nav>
